		"mem": "^6.1.0",
		"mitt": "^2.1.0",
		"preact": "^10.4.6",
		"preact-i18nline": "^2.0.0",
		"preact-router": "^3.2.1",
		"query-string": "^6.13.1",
		"whatwg-fetch": "^3.4.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie < 11"
	],
	"storybook-deployer": {
		"gitUsername": "Guilherme Gazzo",
		"gitEmail": "guilherme.gazzo@rocket.chat",
		"commitMessage": "Deploy Storybook to GitHub Pages [skip ci]"
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-s i18n && git add -A src/i18n && yarn build"
		}
	},
	"houston": {
		"updateFiles": [
			"package.json"
		]
	},
	"loki": {
		"configurations": {
			"chrome": {
				"target": "chrome.docker",
				"width": 365,
				"height": 500
			}
		}
	}
}
